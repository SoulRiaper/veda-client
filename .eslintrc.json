{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": [
    "security-node"
  ],
  "extends": [
    "google",
    "plugin:security-node/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    // Style
    "space-before-function-paren": ["error", "always"],
    "new-cap": ["off"],
    "max-len": ["off"],
    "camelcase": ["off"],
    "no-unused-vars": ["warn"],
    "no-restricted-globals": ["error"],
    "indent": ["error", 2],
    "no-new-wrappers": ["warn"],
    "require-jsdoc": ["off"],
    "no-invalid-this": ["off"],
    "quotes": ["error", "single", {"avoidEscape": true}],

    // Security
    "security-node/detect-crlf": ["off"]
  }
}
